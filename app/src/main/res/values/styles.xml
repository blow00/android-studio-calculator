<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppleButton" parent="Widget.AppCompat.Button">
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="ButtonNumber" parent="AppleButton">
        <item name="android:background">@drawable/button_number</item>
    </style>

    <style name="ButtonOperator" parent="AppleButton">
        <item name="android:background">@drawable/button_operator</item>
    </style>

    <style name="ButtonClear" parent="AppleButton">
        <item name="android:background">@drawable/button_clear</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ButtonEquals" parent="AppleButton">
        <item name="android:background">@drawable/button_equals</item>
    </style>

    <style name="ButtonFunction" parent="AppleButton">
        <item name="android:background">@drawable/button_function</item>
    </style>
</resources>